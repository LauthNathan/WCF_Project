      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WCF_Client"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Login">

    <Grid Background="#e8eaf6">
        <Rectangle Fill="#FFF4F4F5" Height="379" Margin="312,175,368,166" Width="600"/>
        <Label x:Name="usernameLabel" Content="Username" HorizontalAlignment="Left" Margin="355,233,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="42" Margin="355,293,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="211" FontSize="24"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="42" Margin="355,462,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="211" FontSize="24"/>
        <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" Margin="355,402,0,0" VerticalAlignment="Top" FontSize="24"/>

    </Grid>
</Page>
